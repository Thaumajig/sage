<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<div class="row">
  <div class="col-md-4">
    <%= link_to "Profile", user_path(@user), class: "btn btn-default btn-lg btn-block" %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Project", new_project_path, class: "btn btn-default btn-lg btn-block" %>
  </div>
  <div class="col-md-4">
    <%= link_to "Redeem Key", redeem_key_projects_path, class: "btn btn-default btn-lg btn-block" %>
  </div>
</div>

<br>

<table class="table table-striped table-bordered">
  <% @projects.each do |project| %>
    <tr>
    	<td class="nodecoration">
        <%= link_to project_path(project), title: "View" do %>
          <%= truncate(project.name, length: 100) %>
        <% end %>
    	  <div class="pull-right">
          <%= link_to edit_project_path(project), title: "Edit" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to project_path(project), title: "Delete", method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
